@article{Cho_Gay_Davidson_Ingraffea_2007,
	title        = {Social networks, communication styles, and learning performance in a CSCL community},
	author       = {Cho, Hichang and Gay, Geri and Davidson, Barry and Ingraffea, Anthony},
	year         = 2007,
	month        = {Sep},
	journal      = {Computers and Education},
	publisher    = {Pergamon},
	address      = {["Communications and New Media Programme, FASS, National University of Singapore, 3 Arts Link, Singapore", “Department of Communication, Information Science HCI Lab, Cornell University, 301 College Avenue, Ithaca, NY 14850-4623, United States”, "Departmen},
